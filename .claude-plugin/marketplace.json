{
  "name": "cc-lsp",
  "owner": {
    "name": "h16rkim",
    "url": "https://github.com/h16rkim"
  },
  "plugins": [
    {
      "name": "kotlin-lsp",
      "source": "./kotlin-lsp",
      "description": "Kotlin language support for Claude Code using JetBrains official Kotlin LSP",
      "version": "1.0.1",
      "author": {
        "name": "h16rkim",
        "email": "h16rkim@gmail.com"
      },
      "homepage": "https://github.com/h16rkim/cc-lsp",
      "repository": "https://github.com/h16rkim/cc-lsp",
      "license": "MIT",
      "keywords": [
        "kotlin",
        "lsp",
        "language-server",
        "jetbrains",
        "gradle"
      ],
      "lspServers": {
        "kotlin-lsp": {
          "command": "kotlin-lsp",
          "extensionToLanguage": {
            ".kt": "kotlin",
            ".kts": "kotlin"
          }
        }
      }
    },
    {
      "name": "jdtls",
      "source": "./jdtls",
      "description": "Eclipse JDT Language Server for Java",
      "version": "0.0.1",
      "author": {
        "name": "h16rkim",
        "email": "h16rkim@gmail.com"
      },
      "homepage": "https://github.com/h16rkim/cc-lsp",
      "repository": "https://github.com/h16rkim/cc-lsp",
      "license": "MIT",
      "keywords": ["java", "lsp", "language-server", "eclipse"]
    }
  ]
}
